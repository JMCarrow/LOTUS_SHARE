<div class="plant-map">
  <div class="card-container">
    <% @plants.each do |plant| %>
      <div class="plant-card">
        <%= link_to plant_path(plant) do %>
          <div class="index-card-body">
            <div class="card-image">
              <% if plant.photo.attached? %>
                <%= cl_image_tag plant.photo.key, crop: :fill, class:"index-card-image"%>
              <% end %>
            </div>
            <div class="index-card-info">
              <h5 class="index-card-title"><%= plant.name.length < 16 ? plant.name : plant.name.first(16) + "..."%></h5>
              <div class="index-card-text">
                <p><%= plant.size %> - <%= plant.environment %></p>
                <span><%= plant.rent_price %>â‚¬ /Day</span>
              </div>
            </div>
          </div>
        <% end %>
        <div class="d-none">
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= plant.name %></li>
              <li class="list-group-item"><%= plant.size %></li>
              <li class="list-group-item"><%= plant.environment %></li>
            </ul>
          <div class="index-card-body">
            <a href="#" class="index-card-link">Card link</a>
            <a href="#" class="index-card-link">Another link</a>
            <%= link_to 'delete', plant_path(plant), method: :delete, data: { confirm: "Are you sure you want to delete this offer?"}, style:'padding-left: 20px; padding-right: 20px', class: "btn btn-secondary"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div id="map"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
