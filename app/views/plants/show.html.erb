<div class="container-product">
  <div class="plant-image">
    <%= cl_image_tag @plant.photo.key, crop: :fill, class:"show-image" %>
  </div>
  <div class="plant-content">
    <div class="meta-info">
      <h1><%= @plant.name%></h1><h2><%= @plant.environment %> - <%= @plant.size %></h2>

      <div class="user-meta-info">
        <p>This plant is own by <%= @plant.user.first_name %></p>
        <a href=""><i>0 star</i> <span>0 reviews</span></a>
      </div>

      <div class="plant-price-infos">
        <h2>13â‚¬/day</h2> <i class="fa-solid fa-basket-shopping"></i>
      </div>
        <br>
      <div class="plant-infos">
        <span><i class="fas fa-sun"></i> <strong>Sun exposure</strong></span>
        <p> This plant like to be in the sun but can stay in the shadow</p>
      </div>
        <br>
      <div class="plant-infos">
        <span><i class="fa-solid fa-faucet-drip"></i> <strong>Watering</strong></span>
        <p>Give water once a week</p>
      </div>
        <br>
      <button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModal" style="font-size: 20px;">Reserve to rent</button></p>
      <%= link_to 'delete', plant_path(@plant), method: :delete, data: { confirm: "Are you sure you want to delete this offer?"}, style:'padding-left: 20px; padding-right: 20px', class: "btn btn-secondary"%>
      <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Reserve the selected session</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
              <h4>"<%= @plant.name %>" will cost you <% credit= rand (10) %> <%= credit %> credits, do you confirm your reservation?</h4>
                <%= simple_form_for [@plant, @reservation] do |f| %>
                    <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
                    <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
                <p class="text-center"><%= f.submit class: "btn btn-secondary" %></p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <!-- end of Modal -->
    </div>
  </div>
</div>
