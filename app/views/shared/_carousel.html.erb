                            <h4 class="car-card-title"><%= plant.name %></h4>
                            <p class="car-card-text"><%= plant.description.first(200) %></p>
                          </div>
                        </div>
                       <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="carousel-item">
              <div class="row">
                <% @carousel3.each do |plant| %>
                  <div class="col-md-4 mb-3">
                    <div class="car-card">
                      <%= link_to plant_path(plant) do %>
